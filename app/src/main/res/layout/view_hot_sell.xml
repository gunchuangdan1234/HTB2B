<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/space_10"
    android:paddingLeft="@dimen/space_10"
    android:paddingRight="@dimen/space_10">

    <LinearLayout
        android:id="@+id/ll_hot_sell"
        android:layout_width="@dimen/adv_height"
        android:layout_height="@dimen/adv_height"
        android:layout_alignParentRight="true"
        android:background="@mipmap/bg_hot_sell"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/res_hot_sell" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:text="热销榜单"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12" />


    </LinearLayout>


    /LinearLayout>

    <ImageView
        android:id="@+id/ImageViewHome5Imagepic01"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/adv_height"
        android:layout_gravity="center_vertical"
        android:background="@color/whitesmoke"
        android:layout_toLeftOf="@+id/ll_hot_sell" />


</RelativeLayout>

