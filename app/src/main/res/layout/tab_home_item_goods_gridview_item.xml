<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--商品生产厂家-->
        <TextView
            android:id="@+id/TextViewFactory"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:lines="1"
            android:text="华润三九医药股份有限公司"
            android:textColor="#6D6D6D"
            android:layout_marginTop="10dp"
            android:textSize="13dp" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/ic_right_arrow" />

    </RelativeLayout>

    <!--商品缩略图显示模块 liubw-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#e3e3e3"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:padding="1dp">
        <!-- 商品缩略图-->
        <ImageView
            android:id="@+id/ImageViewImagePic01"
            android:layout_width="@dimen/main_goods_size"
            android:layout_height="@dimen/main_goods_size"
            android:padding="@dimen/space_20"
            android:adjustViewBounds="true"
            android:background="@mipmap/dic_goods_gridview_pic_bg"
            android:scaleType="fitXY"
            android:src="@mipmap/test12" />
    </LinearLayout>

    <!--商品名字显示-->
    <TextView
        android:id="@+id/TextViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingTop="5dp"

        android:lines="1"
        android:layout_marginLeft="5dp"
        android:text="测试商品1"
        android:textColor="#e51D1D1D"
        android:textSize="14dp" />

    <!--商品规格-->
    <TextView
        android:id="@+id/TextViewGuige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="铁盒装 36片"
        android:textColor="#881D1D1D"
        android:textSize="11dp" />

    <!--商品价格显示-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="#1cb9b1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="10dp"
        android:padding="1dp">

        <TextView
            android:id="@+id/TextViewPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:layout_centerInParent="true"
            android:text="价格仅会员可见"
            android:background="#f2f2f2"
            android:textColor="#e0325b"
            android:textSize="13dp" />
    </RelativeLayout>
</LinearLayout>