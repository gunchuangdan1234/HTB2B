<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FAFAFA"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@mipmap/app_title_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_back_btn_normal"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/textGoodsTabTitleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dip"
            android:text="编辑收货地址"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="25dp"
        android:paddingLeft="25dp">

        <EditText
            android:id="@+id/editAddressName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/ic_bg_edit"
            android:gravity="center_vertical"
            android:hint="请输入姓名"
            android:paddingLeft="30dp"
            android:singleLine="true"
            android:textColor="#6d6d6d"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/editAddressInfo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@mipmap/ic_bg_edit"
            android:gravity="center_vertical"
            android:text="地址信息"
            android:paddingLeft="30dp"
            android:layout_marginTop="20dp"
            android:textColor="#6d6d6d"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editJieDaoAddress"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@mipmap/ic_bg_edit"
            android:gravity="center_vertical"
            android:hint="请输入街道地址"
            android:paddingLeft="30dp"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:textColor="#6d6d6d"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editAddressTelPhone"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@mipmap/ic_bg_edit"
            android:gravity="center_vertical"
            android:hint="请输入固定电话"
            android:paddingLeft="30dp"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:textColor="#6d6d6d"
            android:textSize="15dp" />

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/add_to_cat_button_bg"
            android:gravity="center"
            android:text="提交"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

    </LinearLayout>
</LinearLayout>