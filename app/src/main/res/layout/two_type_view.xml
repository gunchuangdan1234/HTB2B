<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/app_title_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_back_btn_normal"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/textTypeTitleName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dip"
            android:text="分类"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/typeNextExpandableListViewID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:childDivider="@mipmap/cart_listview_gap"
        android:childIndicator="@null"
        android:choiceMode="singleChoice"
        android:divider="@mipmap/cart_listview_gap"
        android:fadingEdge="none"
        android:groupIndicator="@null"
        android:scrollbars="none" />

</LinearLayout>