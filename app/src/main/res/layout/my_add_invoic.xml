<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sl_view"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="10dip"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text="新增发票"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票抬头:"
                    android:textColor="#6D6D6D"
                    android:textSize="15dp" />

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_invoice_normal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/cart_checkbox_bg"
                        android:drawablePadding="5dip"
                        android:text="普通"
                        android:textColor="#6d6d6d"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/rb_invoice_proprietary"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:drawableLeft="@drawable/cart_checkbox_bg"
                        android:drawablePadding="5dip"
                        android:text="专有"
                        android:textColor="#6d6d6d"
                        android:textSize="15dp" />
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/add_invoice_edit_danwei_name"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/edit_bg"
                android:hint="请输入单位名称"
                android:padding="5dip"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/add_invoice_edit_inv_num"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/edit_bg"
                android:hint="请输入纳税人识别号"
                android:padding="5dip"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/add_invoice_edit_company_address"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/edit_bg"
                android:hint="请输入注册地址"
                android:padding="5dip"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/add_invoice_edit_phone_num"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/edit_bg"
                android:hint="请输入注册电话"
                android:inputType="phone"
                android:padding="5dip"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/add_invoice_edit_bank_name"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/edit_bg"
                android:hint="请输入开户行名称"
                android:padding="5dip"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/add_invoice_edit_bank_num"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/edit_bg"
                android:hint="请输入开户行帐号"
                android:inputType="number"
                android:padding="5dip"
                android:textSize="15dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:text="如您是首次开具增值税专用发票，请您填写纳税人识别号等开票信息  ，并上传加盖公章的营业执照副本、税务登记副本、一般纳税人资格证书及银行开户许可证扫描邮寄给我们，收到您的开票资料后，我们会尽快审核。"
                android:textColor="#6D6D6D"
                android:textSize="@dimen/text_size_14" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="发票内容：药品"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18" />

            <EditText
                android:id="@+id/et_invoice_name"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/edit_bg"
                android:hint="请输入收票人姓名"
                android:padding="5dip"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_invoice_phone_num"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/edit_bg"
                android:hint="请输入收票人手机号"
                android:inputType="phone"
                android:padding="5dip"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_invoice_province"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:text="点击选择收票人省份"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:padding="5dip"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/et_invoice_address"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/edit_bg"
                android:hint="请输入收票人地址"
                android:padding="5dip"
                android:textSize="15dp" />


