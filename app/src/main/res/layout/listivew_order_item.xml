<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="10dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textOrderAddTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#DFF0D8"
            android:padding="5dip"
            android:text="订单时间："
            android:textColor="#6D6D6D"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/addViewID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/linearLayoutFLag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="5dip"
                android:background="@mipmap/cart_listview_gap" />

            <Button
                android:id="@+id/buttonFuKuan"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|right"
                android:layout_margin="5dip"
                android:background="@mipmap/ic_btn_register"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:text="订单支付"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>