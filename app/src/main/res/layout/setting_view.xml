<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FAFAFA"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/app_title_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_back_btn_normal"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/textGoodsTabTitleName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dip"
            android:text="设置"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cleanID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_w_bg"
            android:padding="10dip"
            android:singleLine="true"
            android:text="清除缓存"
            android:textColor="@color/black99"
            android:drawableRight="@mipmap/ic_right_arrow"
            android:layout_marginBottom="20dip"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_line" />

        <TextView
            android:id="@+id/helpID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_w_bg"
            android:padding="10dip"
            android:singleLine="true"
            android:text="在线帮助"
            android:drawableRight="@mipmap/ic_right_arrow"
            android:textColor="@color/black99"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/feekID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_w_bg"
            android:padding="10dip"
            android:singleLine="true"
            android:drawableRight="@mipmap/ic_right_arrow"
            android:text="意见反馈"
            android:textColor="@color/black99"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/aboutID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_w_bg"
            android:padding="10dip"
            android:singleLine="true"
            android:drawableRight="@mipmap/ic_right_arrow"
            android:text="关于我们"
            android:textColor="@color/black99"
            android:textSize="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonOutID"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/add_to_cat_button_bg"
        android:paddingBottom="10dip"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:paddingTop="10dip"
        android:text="退出登录"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

</LinearLayout>