<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/app_title_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_back_btn_normal"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/textTitleName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:padding="5dip"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dip">

        <EditText
            android:id="@+id/editSearchID"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@mipmap/ic_bg_edit"
            android:drawableLeft="@mipmap/ic_bar_search"
            android:hint="搜索商品"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textSearchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:padding="5dip"
            android:text="搜索"
            android:textColor="@color/black99"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_line" />

    <ExpandableListView
        android:id="@+id/elistViewID"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#f5f5f5"
        android:scrollbars="none"
        android:childDivider="@mipmap/cart_listview_gap"
        android:childIndicator="@null"
        android:divider="@mipmap/cart_listview_gap"
        android:fadingEdge="none"
        android:groupIndicator="@null"
        android:listSelector="#f5f5f5" />
</LinearLayout>