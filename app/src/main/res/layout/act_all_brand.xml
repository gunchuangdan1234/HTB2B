<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">


    <!-- 首页TOP -->
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@mipmap/app_title_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_back_btn_normal"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/textGoodsTabTitleName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dip"
            android:singleLine="true"
            android:text="专题页面"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/computerID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@mipmap/computer"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iphoneID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@mipmap/iphone"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_10"
        android:weightSum="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_xiyao"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="@dimen/button_height"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:layout_marginRight="@dimen/space_10"
            android:background="@color/class_bg_all_brand_selected"
            android:text="西药品" />

        <Button
            android:id="@+id/btn_zhongyao"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="@dimen/button_height"
            android:layout_marginRight="@dimen/space_10"
            android:textColor="#878787"
            android:textSize="@dimen/text_size_16"
            android:background="@color/white"
            android:text="中药品" />

        <Button
            android:id="@+id/btn_yiliaoqixie"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="@dimen/button_height"
            android:textColor="#878787"
            android:textSize="@dimen/text_size_16"
            android:background="@color/white"
            android:text="医疗器械" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_baojian"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="@dimen/button_height"
            android:textColor="#878787"
            android:textSize="@dimen/text_size_16"
            android:background="@color/white"
            android:layout_marginRight="@dimen/space_10"
            android:text="保健药品" />

        <Button
            android:id="@+id/btn_qita"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="@dimen/button_height"
            android:textColor="#878787"
            android:textSize="@dimen/text_size_16"
            android:background="@color/white"
            android:layout_marginRight="@dimen/space_10"
            android:text="其他" />

        <Button
            android:id="@+id/btn_qita_1"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="@dimen/button_height"
            android:textColor="#878787"
            android:textSize="@dimen/text_size_16"
            android:background="@color/white"

            android:visibility="invisible"
            android:text="其他" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginBottom="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10"
        android:background="#dedede" />

    <GridView
        android:id="@+id/gv_all_brand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:horizontalSpacing="@dimen/space_10"
        android:verticalSpacing="@dimen/space_10"
        android:padding="@dimen/space_5"
        android:numColumns="4" />


</LinearLayout>