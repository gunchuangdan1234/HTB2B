<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@mipmap/app_title_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_back_btn_normal"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/textGoodsTabTitleName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dip"
            android:text="新增收货地址"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editAddressName"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_margin="5dip"
            android:background="@mipmap/ic_bg_edit"
            android:hint="请输入收货人姓名"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:singleLine="true"
            android:textColor="@color/darkcyan"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editAddressInfo"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:background="@mipmap/ic_bg_edit"
                android:text="请选择地址信息"
                android:textColor="#6d6d6d"
                android:textSize="15dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/editJieDaoAddress"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_margin="5dip"
            android:background="@mipmap/ic_bg_edit"
            android:hint="请输入街道地址"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:singleLine="true"
            android:textColor="#6d6d6d"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editAddressMobPhone"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_margin="5dip"
            android:background="@mipmap/ic_bg_edit"
            android:hint="请输入手机号码"
            android:numeric="integer"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:singleLine="true"
            android:textColor="#6d6d6d"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editAddressTelPhone"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_margin="5dip"
            android:background="@mipmap/ic_bg_edit"
            android:hint="请输入固定电话"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:singleLine="true"
            android:textColor="#6d6d6d"
            android:textSize="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dip"
        android:background="@drawable/add_to_cat_button_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

</LinearLayout>